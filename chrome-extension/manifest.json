{
  "manifest_version": 3,
  "name": "AI Code Clipboard",
  "version": "1.0",
  "description": "Copy-paste extension that enhances clipboard with AI code generation",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "activeTab",
    "background",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://*.render.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Code Clipboard"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
